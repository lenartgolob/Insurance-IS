@model web.Models.InsurancePolicy

@{
    ViewData["Title"] = "Details";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<h1>Details</h1>

<div id="pdfContainer">
    <div style="text-align: center"><h3 style="display: inline; margin-right: 7px;">Insurance-IS</h3><img style="width: 80px; margin-left: 7px;" class="logo" src="/images/logo-small.png" alt="logo"></div>
    <hr />
    <div style="display: flex; justify-content: space-between;">
        <h4>Insurance Policy</h4>
        <p>Number: @Html.DisplayFor(model => model.InsurancePolicyID)</p>
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinalSum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinalSum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
                <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insured)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insured.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceSubject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceSubject.Title)
        </dd>
                <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceSubtype)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceSubtype.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.InsurancePolicyID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div class="text-center">
    <button id="btnPdf" class="btn btn-primary">Generate PDF</button>
</div>
<script type="text/javascript">
    $("#btnPdf").click(function () {
        var sHtml = $("#pdfContainer").html();
        sHtml = sHtml.replace(/</g, "StrTag").replace(/>/g, "EndTag");
        window.open('../../InsurancePolicy/GeneratePDF?html=' + sHtml, '_blank')
    });
</script>